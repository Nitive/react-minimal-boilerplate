{
  "name": "react-minimal-boilerplate",
  "version": "1.0.0",
  "description": "Minimal starter environment for beginners in React",
  "scripts": {
    "start": "concurrent 'npm run watch' 'npm run server'",
    "server": "browser-sync start --files 'index.html, build/*' --server",
    "build:js": "browserify app/app.js -o build/bundle.js",
    "build:css": "stylus app/app.styl -o build/main.css",
    "build": "concurrent 'npm run build:js' 'npm run build:css'",
    "watch:js": "watchify app/app.js -o build/bundle.js",
    "watch:css": "npm run build:css -- --watch",
    "watch": "concurrent 'npm run watch:js' 'npm run watch:css'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.0",
    "browserify": "^12.0.1",
    "concurrently": "^1.0.0",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "stylus": "^0.53.0",
    "watchify": "^3.6.1"
  },
  "keywords": [
    "react",
    "babel",
    "stylus",
    "browser-sync"
  ],
  "author": "Maxim Samoilov @nitive",
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react",
            "stage-0"
          ]
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitive/react-minimal-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/nitive/react-minimal-boilerplate/issues"
  },
  "homepage": "https://github.com/nitive/react-minimal-boilerplate#readme"
}
